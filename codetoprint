#include <iostream>
#include <queue>
#include <string>
using namespace std;

class Package {
public:
    string destination;
    int priority;

    Package(string dest, int pri) {
        destination = dest;
        priority = pri;
    }
};

// Comparator: lower priority number means higher priority
class Compare {
public:
    bool operator()(Package a, Package b) {
        return a.priority > b.priority;
    }
};

int main() {
    priority_queue<Package, vector<Package>, Compare> deliveryQueue;
    int choice;
    string destination;
    int priority;

    while (true) {
        cin >> choice;

        if (!cin) break; // input ends

        if (choice == 1) {
            cin.ignore();
            getline(cin, destination);
            cin >> priority;

            deliveryQueue.push(Package(destination, priority));
            cout << "Package added to the delivery queue." << endl;
        }
        else if (choice == 2) {
            if (deliveryQueue.empty()) {
                cout << "No packages in the delivery queue." << endl;
            } else {
                Package top = deliveryQueue.top();
                deliveryQueue.pop();
                cout << "Delivered package to: " << top.destination << endl;
            }
        }
        else if (choice == 3) {
            if (deliveryQueue.empty()) {
                cout << "No packages in the delivery queue." << endl;
            } else {
                cout << "Next package for delivery: " 
                     << deliveryQueue.top().destination << endl;
            }
        }
        else if (choice == 4) {
            cout << "Exiting the application." << endl;
            break;
        }
        else {
            cout << "Invalid choice." << endl;
        }
    }

    return 0;
}