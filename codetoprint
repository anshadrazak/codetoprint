#include <iostream>
#include <iomanip>
using namespace std;

class Property {
public:
    int ;
    double purchasePrice;
    double rentalIncome;

    void  id, double price, double rent) {
        propertyID = id;
        purchasePrice = price;
        rentalIncome = rent;
    }

    double calculateROI() {
        return (rentalIncome / purchasePrice) * 100.0;
    }
};

int main() {
    int numProperties;
    cin >> numProperties;
    Property properties[10]; // Assuming max properties n <= 10 (use as per constraints)

    for (int i = 0; i < numProperties; i++) {
        int id;
        double price, rent;
        cin >> id >> price >> rent;
        properties[i].setValues(id, price, rent);
    }

    for (int i = 0; i < numProperties; i++) {
        double roi = properties[i].calculateROI();
        cout << properties[i].propertyID << " " << fixed << setprecision(2) << roi << "%" << endl;
    }

    return 0;
}