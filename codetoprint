NODE deleteFromFront(NODE head) {
    if (head->link == head) { 
        // List empty
        cout << "List is empty." << endl;
        return head;
    }

    NODE first = head->link;     // First real node
    head->link = first->link;    // Skip the first node
    delete first;

    return head;
}

NODE deleteFromEnd(NODE head) {
    if (head->link == head) {
        // List empty
        cout << "List is empty." << endl;
        return head;
    }

    NODE cur = head->link;
    NODE prev = head;

    // Traverse until cur is last node (next is head)
    while (cur->link != head) {
        prev = cur;
        cur = cur->link;
    }

    // cur is last node
    prev->link = head;   // Remove last node
    delete cur;

    return head;
}