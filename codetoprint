Message* reverseInsertedMessages(Message* head) {

    if (head == nullptr) return nullptr;

    // Break the circular structure
    Message* last = head;
    while (last->next != head) {
        last = last->next;
    }
    last->next = nullptr;  // make list linear

    // Reverse the singly linked list
    Message* prev = nullptr;
    Message* curr = head;
    Message* next = nullptr;

    while (curr != nullptr) {
        next = curr->next;
        curr->next = prev;
        prev = curr;
        curr = next;
    }

    // prev is new head (reversed)

    // ðŸ”¥ REBUILD THE CIRCULAR LINK ðŸ”¥
    Message* newHead = prev;
    Message* tail = newHead;

    while (tail->next != nullptr) {
        tail = tail->next;
    }
    tail->next = newHead;  // make it circular again!

    return newHead;  
}