#include <iostream>
#include <string>
using namespace std;

// Class Definition (Your snippet)
class OnlineShop {
private:
    string productName;
    int totalItems;
public:
    void initialize(string name) {
        productName = name;
        totalItems = 0;
    }

    // This function requires 3 arguments
    void calculateTotalItems(int a, int b, int c) {
        totalItems = a + b + c;
    }

    string getProductName() {
        return productName;
    }

    int getTotalItems() {
        return totalItems;
    }
};

// Main function (Corrected Footer Snippet + Logic)
int main() {
    OnlineShop shop;
    string productName;
    // --- Correction: Declaring three variables for the item counts ---
    int a, b, c; 
    
    // Read the product name (handles spaces)
    getline(cin, productName);
    
    // --- New Line: Read the three item counts ---
    cin >> a >> b >> c; 

    // 1. Initialize the object (Fix: Pass 1 argument)
    shop.initialize(productName); 

    // 2. Calculate total items (Fix: Pass 3 arguments)
    shop.calculateTotalItems(a, b, c);

    // 3. Get the result for output
    int totalItems = shop.getTotalItems(); 

    // 4. Print the output
    cout << "Product Name: " << shop.getProductName() << endl;
    cout << "Total items: " << totalItems;

    return 0;
}
