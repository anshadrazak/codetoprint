Node* insertNode(Node* head, int data) {
    Node* newNode = createNode(data);

    if (head == NULL) return newNode;

    Node* temp = head;
    while (temp->next != NULL) temp = temp->next;
    temp->next = newNode;

    return head;
}

Node* leftShiftLinkedList(Node* head, int k) {
    if (head == NULL || head->next == NULL || k <= 0) return head;

    // find length & last node
    Node* last = head;
    int length = 1;
    while (last->next != NULL) {
        last = last->next;
        length++;
    }

    k = k % length;
    if (k == 0) return head;

    // make it circular
    last->next = head;

    // move to new last (k steps)
    Node* newLast = head;
    for (int i = 1; i < k; i++) {
        newLast = newLast->next;
    }

    Node* newHead = newLast->next;
    newLast->next = NULL;

    return newHead;
}

void printList(Node* head) {
    while (head != NULL) {
        cout << head->data << " ";
        head = head->next;
    }
    cout << endl;
}