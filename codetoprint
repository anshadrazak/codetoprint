Message* reverseInsertedMessages(Message* head) {
    // empty list
    if (head == nullptr) return nullptr;

    // find last node (so we can break the circle)
    Message* last = head;
    while (last->next != head) {
        last = last->next;
    }

    // break the circular link -> convert to normal singly linked list
    last->next = nullptr;

    // reverse the singly linked list
    Message* prev = nullptr;
    Message* curr = head;
    Message* next = nullptr;

    while (curr != nullptr) {
        next = curr->next;
        curr->next = prev;
        prev = curr;
        curr = next;
    }

    // prev is the head of the reversed list
    Message* newHead = prev;

    // restore circular property: find tail of reversed list and point it to newHead
    if (newHead != nullptr) {
        Message* tail = newHead;
        while (tail->next != nullptr) tail = tail->next;
        tail->next = newHead;
    }

    return newHead;
}