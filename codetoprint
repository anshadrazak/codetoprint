// insert value at the end of the list
void insert(struct Node **head, int value) {
    if (value < 0) return; // guard (main won't call for negatives, but safe)

    Node* newnode = new Node();
    newnode->data = value;
    newnode->next = NULL;

    if (*head == NULL) {
        *head = newnode;
        return;
    }

    Node* temp = *head;
    while (temp->next != NULL) temp = temp->next;
    temp->next = newnode;
}

// print list exactly as expected by tests
void print(struct Node *head) {
    if (head == NULL) {
        cout << "Linked List is empty." << endl;
        return;
    }

    cout << "Linked List: ";
    Node* cur = head;
    bool first = true;
    while (cur != NULL) {
        if (!first) cout << " ";
        cout << cur->data;
        first = false;
        cur = cur->next;
    }
    cout << endl;
}
