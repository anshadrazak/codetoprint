NODE deleteFromFront(NODE head) {
    if (head->link == head) {
        cout << "List is empty." << endl;
        return head;
    }

    NODE first = head->link;
    cout << "Deleted element: " << first->data << endl;

    head->link = first->link;
    delete first;

    return head;
}

NODE deleteFromEnd(NODE head) {
    if (head->link == head) {
        cout << "List is empty." << endl;
        return head;
    }

    NODE cur = head->link;
    NODE prev = head;

    while (cur->link != head) {
        prev = cur;
        cur = cur->link;
    }

    cout << "Deleted element: " << cur->data << endl;

    prev->link = head;
    delete cur;

    return head;
}