#include <iostream>
#include <iomanip>
using namespace std;

class Circle {
    float radius;

public:
    void setRadius(float r) {
        radius = r;
    }

    void calculate() {
        float* ptr = &radius;
        float area = 3.14f * (*ptr) * (*ptr);
        float perimeter = 2 * 3.14f * (*ptr);

        cout << fixed << setprecision(2);
        cout << "Area: " << area << endl;
        cout << "Perimeter: " << perimeter << endl;
    }
};

int main() {
    float r;
    cin >> r;
    Circle circle;
    circle.setRadius(r);
    circle.calculate();
    return 0;
}