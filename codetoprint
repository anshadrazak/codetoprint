link* create_header_list(int data) {
    link* newnode = new link();
    newnode->info = data;
    newnode->next = nullptr;

    if (start == nullptr) {
        start = newnode;
    } else {
        link* temp = start;
        while (temp->next != nullptr) {
            temp = temp->next;
        }
        temp->next = newnode;
    }

    return newnode;
}

// Count nodes
int display() {
    int count = 0;
    link* head = start;

    while (head != nullptr) {
        count++;
        head = head->next;
    }
    return count;
}
