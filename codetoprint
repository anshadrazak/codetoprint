#include <iostream>
#include <string>

// Header Snippet suggests:
// #include <iostream>
// using namespace std; // Although 'using namespace std;' isn't explicitly shown, 
//                      // the lack of 'std::' in the output snippet implies its usage, 
//                      // but it's best practice to avoid it or use 'std::' prefixes.
// We'll use std:: prefixes for clarity.

// Fill your code here
class OnlineShop {
private:
    std::string productName;
    int totalItems;

public:
    // Initialize function (as seen in the footer snippet: shop.initialize();)
    void initialize() {
        totalItems = 0;
    }

    // Function to calculate and update the total items
    // The footer snippet shows shop.calculateTotalItems(itemsPurchased);
    // The input format requires three integers (a, b, c) on one line, which
    // will be read into 'itemsPurchased' sequentially in main.
    void calculateTotalItems(int itemsPurchased) {
        // The loop in main() reads three items and calls this function
        // three times. We accumulate the total here.
        totalItems += itemsPurchased;
    }

    // Function to set the product name
    void setProductName(std::string name) {
        productName = name;
    }

    // Function to get the product name (implied by output)
    std::string getProductName() {
        return productName;
    }
    
    // Function to get the total number of items
    // The footer snippet shows totalItems = shop.getTotalItems();
    int getTotalItems() {
        return totalItems;
    }

    // Display function (partially visible in the second image)
    void display() {
        std::cout << "Product Name: " << productName << std::endl;
        std::cout << "Total items: " << totalItems << std::endl;
    }
};

// Footer Snippet (combined and completed)
int main() {
    OnlineShop shop;
    
    // The main function reads the product name first (string)
    std::string productName;
    std::getline(std::cin, productName); // Read entire line for product name
    shop.setProductName(productName);    // Set the product name in the object

    // Then it reads three integers (a, b, c)
    int itemsPurchased;
    for (int i = 0; i < 3; ++i) {
        // Reads one integer at a time (2, 5, 4 for Input 1)
        if (!(std::cin >> itemsPurchased)) {
            // Handle case where input might fail prematurely (optional)
            break; 
        }
        // Accumulate the total
        shop.calculateTotalItems(itemsPurchased);
    }

    // Output is handled by the display function or similar calls
    // The footer snippet shows a different output structure, so we'll 
    // adhere to the structure required by the *Output Format* and *Sample Cases*.

    // The output should be:
    // Product Name: [Name]
    // Total items: [Total]
    
    // The display() function is the cleanest way to produce this output.
    shop.display();
    
    // Alternative structure from the partial footer snippet (Lines 19-21 in one image):
    /*
    int totalItems = shop.getTotalItems();
    std::cout << "Product Name: " << shop.getProductName() << std::endl; 
    std::cout << "Total items: " << totalItems << std::endl; 
    */

    return 0;
}
