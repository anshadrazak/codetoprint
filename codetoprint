Message* reverseInsertedMessages(Message* head) {
    if (!head || head->next == head)
        return head;

    Message* prev = nullptr;
    Message* curr = head;
    Message* next = nullptr;

    Message* start = head;

    // reverse until we come back to start
    do {
        next = curr->next;
        curr->next = prev;
        prev = curr;
        curr = next;
    } while (curr != start);

    // connect last node to new head
    start->next = prev;

    // prev is new head
    return prev;
}