#include <iostream>
#include <limits.h>

int main() {
    // 1. Using <limits.h> to display integer limits
    std::cout << "--- Integer Limits (using limits.h) ---" << std::endl;
    std::cout << "Maximum value for int (INT_MAX): " << INT_MAX << std::endl;
    std::cout << "Minimum value for int (INT_MIN): " << INT_MIN << std::endl;

    // 2. Basic output and loop (using iostream)
    std::cout << "\n--- Basic Counting (using iostream) ---" << std::endl;
    
    int counter = 1;
    
    // A simple loop structure
    while (counter <= 5) {
        std::cout << "Count: " << counter << std::endl;
        counter = counter + 1;
    }
    
    return 0;
}
