NODE insertAtEnd(NODE head, int item) {
    NODE temp = getnode();
    temp->data = item;

    if (head->link == head) {
        head->link = temp;
        temp->link = head;
    }
    else {
        NODE curr = head->link;
        while (curr->link != head) {
            curr = curr->link;
        }
        curr->link = temp;
        temp->link = head;
    }

    head->data++;   
    return head;
}

void display(NODE head) {
    cout << "Number of nodes in the CLL is " << head->data << endl;

    NODE temp = head->link;
    while (temp != head) {
        cout << temp->data << " ";
        temp = temp->link;
    }
}