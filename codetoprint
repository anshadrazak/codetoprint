Message* reverseInsertedMessages(Message* head) {
    if (head == nullptr) return nullptr;

    // Step 1: Break circular link
    Message* last = head;
    while (last->next != head) {
        last = last->next;
    }
    last->next = nullptr;  // now it's a normal list

    // Step 2: Reverse normal singly linked list
    Message* prev = nullptr;
    Message* curr = head;
    Message* next = nullptr;

    while (curr != nullptr) {
        next = curr->next;
        curr->next = prev;
        prev = curr;
        curr = next;
    }

    // prev is new head (reversed list)

    // Step 3: Make it circular again
    Message* newHead = prev;
    Message* tail = newHead;

    while (tail->next != nullptr) {
        tail = tail->next;
    }
    tail->next = newHead; // circular again

    return newHead;   // â­ give reversed head to display
}